<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.ict.admin03.mapper.MemberMapper">
    
    <!-- 관리자 계정 관련 -->
    <select id="selectMember"  resultType="AdminVO">
        SELECT * FROM admin_user WHERE id = #{id}
    </select>
    
    <select id="getAdminList" resultType="AdminVO">
      select * from admin_user order by created_at
    </select>

    <insert id="addAdmin" parameterType="AdminVO">
      insert into admin_user (id, pw, email, created_at, updated_at, last_login, is_activated)
      values (#{id}, #{pw}, #{email}, NOW(), NOW(), NOW(), 0)
    </insert>

    <delete id="deleteAdmin" parameterType="Integer">
      delete from admin_user where idx = #{idx}
    </delete>
    
    <!-- 유저 계정 관련 -->
    <select id="getUserList" resultType="UsersVO">
      select * from user_list order by created_at
    </select>

    <delete id="deleteUser" parameterType="Integer">
      delete from user_list where idx = #{idx}
    </delete>
    

    <!-- 게스트북 관련 -->
    <select id="getGuestDetail" resultType="FreeBoardVO">
      select * from free_board where idx = #{idx}
    </select>
    
    
    <select id="getGuestList" resultType="FreeBoardVO">
      select * from free_board order by idx
    </select>
    
    <insert id="insertBoard" parameterType="FreeBoardVO">
      INSERT INTO free_board (id, pw, title, content, created_at, updated_at)
      VALUES (#{id}, #{pw}, #{title}, #{content},  NOW(), NOW()) 
    </insert>

    <!-- 중고거래 2 -->
    <select id="tradeList" resultType="TradeVO">
      select * from trade_board order by idx
    </select>

    <select id="tradeDetail" resultType="TradeVO">
      select * from trade_board where idx = #{idx}
    </select>

    <delete id="deleteTrade" parameterType="int">
      delete from trade_board where idx = #{idx}
    </delete>   

    <!-- 교통정보 -->

</mapper>
